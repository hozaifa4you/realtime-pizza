<section class="cart py-16">
	<% if(session.cart){ %>

	<div class="order container mx-auto w-1/2">
		<div class="flex items-center border-b border-gray-300 py-3">
			<img src="/img/cart-black.png" alt="cart black" />
			<h1 class="text-2xl font-bold ml-4">Order Summery</h1>
		</div>
		<div class="pizza-list">
			<% for(let pizza of Object.values(session.cart.items)){ %>
			<div class="flex items-center my-8">
				<img
					src="/img/<%= pizza.item.image %> "
					alt="cart pizza"
					class="w-24"
				/>
				<div class="ml-4 flex-1">
					<h1><%= pizza.item.name %></h1>
					<span><%= pizza.item.size %> </span>
				</div>
				<span class="font-bold text-lg flex-1"><%= pizza.qty %> Pis</span>
				<span class="font-bold text-lg"
					>ðŸŽˆ<%= pizza.item.price * pizza.qty %>
				</span>
			</div>
			<% } %>
		</div>
		<hr />

		<div class="text-right py-4">
			<div>
				<span class="text-lg font-bold">Total Amount: </span>
				<span class="total-amount text-2xl font-bold ml-2"
					>ðŸŽˆ<%= session.cart.totalPrice %>
				</span>
			</div>
			<% if(user){ %>
			<div>
				<form action="/orders" class="mt-12" method="POST">
					<input
						name="phone"
						type="text"
						class="border border-gray-400 p-2 w-1/2 mb-4"
						placeholder="Phone Number"
					/>
					<input
						name="address"
						type="address"
						class="border border-gray-400 p-2 w-1/2"
						placeholder="Your Address"
					/>

					<div>
						<button
							type="submit"
							class="order-button px-6 py-2 rounded-full text-white font-bold mt-6"
						>
							Order Now
						</button>
					</div>
				</form>
			</div>
			<% }else{ %>
			<a
				href="/login"
				class="inline-block cursor-pointer order-button px-6 py-2 rounded-full text-white font-bold mt-6"
				>Login to continue</a
			>
			<% } %>
		</div>
	</div>

	<% }else{ %>

	<div class="empty-cart py-16">
		<div class="container mx-auto text-center">
			<h1 class="text-3xl font-bold mb-2">Empty Cart</h1>
			<p class="text-gray-500 text-lg mb-12">
				You probably haven't ordered a pizza yet. <br />
				To order a pizza, go to main page.
			</p>
			<img
				src="/img/empty-cart.png"
				alt="empty cart"
				class="w-2/5 mx-auto"
			/>
			<a
				href="/"
				class="inline-block px-6 py-2 rounded-full text-white font-bold mt-12 order-button"
				>Go Back</a
			>
		</div>
	</div>
	<% } %>
</section>
